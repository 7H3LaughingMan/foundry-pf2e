{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "allowJs": true,
        "strict": true,
        "noImplicitOverride": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "rootDir": ".",
        "types": [
            "jquery",
            "node",
            "tooltipster"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types/foundry"
        ]
    }
}